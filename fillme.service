[Unit]
Description=FillMe FastAPI Server
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/fill-me
Environment="PATH=/home/ubuntu/fill-me/venv/bin"
ExecStart=/home/ubuntu/fill-me/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
